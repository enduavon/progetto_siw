<?xml version="1.0" encoding="UTF-8"?>

<faces-config xmlns="http://java.sun.com/xml/ns/javaee"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-facesconfig_2_1.xsd"
	version="2.1">
	<!-- se mi trovo in index -->
	<navigation-rule>
		<from-view-id>/index.xhtml</from-view-id>
		<navigation-case>
			<from-outcome>CatalogoProdotti</from-outcome>
			<to-view-id>/showProdotti.xhtml</to-view-id>
		</navigation-case>
		<navigation-case>
			<from-outcome>Registrati</from-outcome>
			<to-view-id>/registrazioneCliente.xhtml</to-view-id>
		</navigation-case>
		<navigation-case>
			<from-outcome>loginCliente</from-outcome>
			<to-view-id>/loginCliente.xhtml</to-view-id>
		</navigation-case>

	</navigation-rule>
	<!-- se mi trovo in registrazioneCliente -->
	<navigation-rule>
		<from-view-id>/registrazioneCliente.xhtml</from-view-id>
		<navigation-case>
			<from-outcome>registra</from-outcome>
			<to-view-id>/mostraCliente.xhtml</to-view-id>
		</navigation-case>
		<navigation-case>
			<from-outcome>esci</from-outcome>
			<to-view-id>/index.xhtml</to-view-id>
		</navigation-case>
	</navigation-rule>
	
	<!-- se mi trovo in loginCliente -->
	<navigation-rule>
		<from-view-id>/loginCliente.xhtml</from-view-id>
		<navigation-case>
			<from-outcome>mostrami</from-outcome>
			<to-view-id>/mostraCliente.xhtml</to-view-id>
		</navigation-case>
		<navigation-case>
			<from-outcome>esci</from-outcome>
			<to-view-id>/index.xhtml</to-view-id>
		</navigation-case>
	</navigation-rule>
<!-- settaggio bean -->

</faces-config>
